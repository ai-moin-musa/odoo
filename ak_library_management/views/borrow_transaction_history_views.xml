<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="borrow_transaction_history_view_form" model="ir.ui.view">
            <field name="name">borrow.transaction.history.view.form</field>
            <field name="model">borrow.transaction.history</field>
            <field name="arch" type="xml">
                <form string="Borrow Transaction History">
                    <sheet>
                        <group>
                            <field name="customer_id"/>
                            <field name="borrow_start_date"/>
                            <field name="borrow_end_date"/>
                        </group>
                        <notebook>
                            <page name="Books">
                                <field name="books" options="{'create':False}">
                                    <list>
                                        <field name="name"/>
                                        <field name="author"/>
                                        <field name="publisher"/>
                                        <field name="barcode"/>
                                        <field name="published_date"/>
                                        <field name="is_library_book"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="borrow_transaction_history_view_list" model="ir.ui.view">
            <field name="name">borrow.transaction.history.view.list</field>
            <field name="model">borrow.transaction.history</field>
            <field name="arch" type="xml">
                <list string="Borrow Transaction History">
                    <field name="customer_id"/>
                    <field name="borrow_start_date"/>
                    <field name="borrow_end_date"/>
                </list>
            </field>
        </record>
        <record id="borrow_transaction_history_view_action" model="ir.actions.act_window">
            <field name="name">Borrow Transaction History</field>
            <field name="res_model">borrow.transaction.history</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="borrow_transaction_history_view_list"/>
            <field name="help" type="html">
                <p>Borrow Transaction History</p>
            </field>
        </record>
    </data>
</odoo>