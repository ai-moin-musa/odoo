<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--this list view for tags, model: library.book.tags in tags.py -->
        <record id="tag_view_list" model="ir.ui.view">
            <field name="name">tag.list</field>
            <field name="model">library.book.tags</field>
            <field name="arch" type="xml">
                <list string="Tags">
                    <field name='name'/>
                </list>
            </field>
        </record>

        <!--this form view for tags-->
        <record id="tag_view_form" model="ir.ui.view">
            <field name="name">tag.view.form</field>
            <field name="model">library.book.tags</field>
            <field name="arch" type="xml">
                <form string="Tag">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--this action to tag view-->
        <record id="tag_view_action" model="ir.actions.act_window">
            <field name="name">Tags</field>
            <field name="res_model">library.book.tags</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="tag_view_list"/>
            <field name="help" type="html">
                <p>Tags</p>
            </field>
        </record>
    </data>
</odoo>
