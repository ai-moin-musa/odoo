<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--This is Form view for the inserting bulk records of books-->
        <record id="multiple_books_form_view" model="ir.ui.view">
            <field name="name">multiple.books.form</field>
            <field name="model">library.multiple.books</field>
            <field name="arch" type="xml">
                <form string="Multiple Books">
                    <header>
                        <button name="create_products" string="Create Products" type="object"/>
                        <button name="revert_changes" string="Revert Changes" invisible="created == 0" type="object"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box" position="inside">
                            <button class="oe_stat_button" type="object" name="bulk_books" icon="fa-book" invisible="created == 0">
                                <field name="bulk_books_count" string="Product Count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="book_names"/>
                            <field name="author_id" required="True"/>
                            <field name="category_ids"/>
                            <field name="price"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--this is the list view of the multiple books-->
        <record id="multiple_books_list_view" model="ir.ui.view">
            <field name="name">multiple.books.list</field>
            <field name="model">library.multiple.books</field>
            <field name="arch" type="xml">
                <list string="Multiple Books">
                    <field name="book_names"/>
                    <field name="author_id"/>
                    <field name="category_ids"/>
                    <field name="price"/>
                </list>
            </field>
        </record>
        <!--this action for displaying the list and form view of the multiple books-->
        <record id="multiple_books_view_action" model="ir.actions.act_window">
            <field name="name">Multiple Books</field>
            <field name="res_model">library.multiple.books</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="multiple_books_list_view"/>
            <field name="help" type="html">
                <p>Multiple Books</p>
            </field>
        </record>
    </data>
</odoo>
