<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--this form view for library, model: library in library.py -->
        <record id="library_view_form" model="ir.ui.view">
            <field name="name">library.library.form</field>
            <field name="model">library.library</field>
            <field name="arch" type="xml">
                <form string="Library">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="location"/>
                            <field name="capacity"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                    <sheet>
                        <notebook>
                            <page string="Books">
                                <field name="book_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--this list view for libraries, model: library in library.py -->
        <record id="library_view_list" model="ir.ui.view">
            <field name="name">library.library.list</field>
            <field name="model">library.library</field>
            <field name="arch" type="xml">
                <list string="Libraries">
                    <field name='name'/>
                    <field name="location"/>
                    <field name="capacity"/>
                    <field name="notes"/>
                    <field name="book_ids"/>
                </list>
            </field>
        </record>

        <!--this action to library view-->
        <record id="library_view_action" model="ir.actions.act_window">
            <field name="name">Library</field>
            <field name="res_model">library.library</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="library_view_list"/>
            <field name="help" type="html">
                <p>Libraries</p>
            </field>
        </record>

        <!--this is sub menu Library of Library management menu-->
        <menuitem id="library_menu" name="Library" parent="library_management_menu" sequence="2"/>
        <!--this is sub menu Libraries of Library menu-->
        <menuitem id="library_libraries_menu" name="Libraries" parent="library_menu" action="library_view_action"/>
    </data>
</odoo>