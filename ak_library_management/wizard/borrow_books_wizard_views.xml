<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="borrow_books_wizard_view_form" model="ir.ui.view">
            <field name="name">borrow.books.wizard.view.form</field>
            <field name="model">borrow.books.wizard</field>
            <field name="arch" type="xml">
                <form string="Borrow Books">
                    <sheet>
                        <group>
                            <field name="customer_name"/>
                            <field name="from_datetime"/>
                            <field name="end_datetime"/>
                            <field name="book_ids" widget="many2many_tags">
                                <list>
                                    <field name="author"/>
                                </list>
                            </field>
                            <field name="deposit_amount"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object"/>
                        <button name="cancel" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>